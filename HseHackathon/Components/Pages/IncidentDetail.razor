@page "/incident-detail/{IncidentId:int}"
@using HseHackathon.Entities
@using HseHackathon.Services
@inject IncidentService IncidentService
@inject NavigationManager NavigationManager

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-sm">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-file-earmark-text"></i> Incident Details</h5>
                    <div>
                        <button class="btn btn-outline-secondary btn-sm me-2" @onclick="GoBack">
                            <i class="bi bi-arrow-left"></i> Back
                        </button>
                        @if (incident != null && incident.Status == IncidentStatus.Draft)
                        {
                            <a class="btn btn-sm btn-outline-primary me-2" href="/incident-form/@incident.Id">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <button class="btn btn-sm btn-success" @onclick="SubmitIncidentAsync" disabled="@isProcessing">
                                <i class="bi bi-upload"></i>
                                @if (isProcessing) { <span class="ms-1">Submitting...</span> } else { <span class="ms-1">Submit</span> }
                            </button>
                        }
                    </div>
                </div>
                <div class="card-body">
                    @if (isLoading)
                    {
                        <div class="text-center py-5">
                            <div class="spinner-border text-primary" role="status"></div>
                            <div class="mt-2 text-muted">Loading incident...</div>
                        </div>
                    }
                    else if (errorMessage != null)
                    {
                        <div class="alert alert-danger">@errorMessage</div>
                    }
                    else if (incident == null)
                    {
                        <div class="alert alert-info">Incident not found.</div>
                    }
                    else
                    {
                        <div class="row">
                            <div class="col-md-8">
                                <dl class="row">
                                    <dt class="col-sm-4 text-muted">Date / Time</dt>
                                    <dd class="col-sm-8">@incident.DateTimeReported.ToString("dd/MM/yyyy HH:mm")</dd>

                                    <dt class="col-sm-4 text-muted">Location</dt>
                                    <dd class="col-sm-8">@incident.Location</dd>

                                    <dt class="col-sm-4 text-muted">Type</dt>
                                    <dd class="col-sm-8">@incident.IncidentType?.Name ?? "—"</dd>

                                    <dt class="col-sm-4 text-muted">Status</dt>
                                    <dd class="col-sm-8">
                                        @switch (incident.Status)
                                        {
                                            case IncidentStatus.Draft:
                                                <span class="badge bg-secondary">Draft</span>
                                                break;
                                            case IncidentStatus.Submitted:
                                                <span class="badge bg-primary">Submitted</span>
                                                break;
                                            case IncidentStatus.Reviewed:
                                                <span class="badge bg-info">Reviewed</span>
                                                break;
                                            case IncidentStatus.Closed:
                                                <span class="badge bg-success">Closed</span>
                                                break;
                                        }
                                    </dd>

                                    <dt class="col-sm-4 text-muted">Created</dt>
                                    <dd class="col-sm-8">@incident.CreatedDate.ToString("g")</dd>

                                    <dt class="col-sm-4 text-muted">Updated</dt>
                                    <dd class="col-sm-8">@(incident.UpdatedDate?.ToString("g") ?? "—")</dd>
                                </dl>

                                <hr />

                                <h6 class="text-muted">Description</h6>
                                <p>@incident.Description</p>
                            </div>

                            <div class="col-md-4">
                                <h6 class="text-muted">Photo</h6>
                                @if (!string.IsNullOrEmpty(incident.PhotoUrl))
                                {
                                    <div class="card">
                                        <img src="@incident.PhotoUrl" class="card-img-top" alt="Incident photo" style="object-fit:cover; max-height:300px;" />
                                        <div class="card-body text-center">
                                            <a href="@incident.PhotoUrl" target="_blank" class="btn btn-sm btn-outline-primary">Open full size</a>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="text-muted">No photo attached.</div>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public int IncidentId { get; set; }

    private Incident? incident;
    private bool isLoading = true;
    private bool isProcessing = false;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadIncident();
    }

    private async Task LoadIncident()
    {
        try
        {
            isLoading = true;
            incident = await IncidentService.GetIncidentByIdAsync(IncidentId);
            if (incident == null)
                errorMessage = "Incident not found";
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading incident: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void GoBack()
    {
        NavigationManager.NavigateTo("/");
    }

    private async Task SubmitIncidentAsync()
    {
        if (incident == null) return;

        try
        {
            isProcessing = true;
            await IncidentService.SubmitIncidentAsync(incident.Id);
            await LoadIncident();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error submitting incident: {ex.Message}";
        }
        finally
        {
            isProcessing = false;
        }
    }
}
